pipeline {
    agent any

    triggers {
            cron('H */8 * * *') //regular builds
            pollSCM('* * * * *') //polling for changes, here once a minute
        }

        stages {
            stage('Checkout') {
                steps { //Checking out the repo
                    checkout scm
                     }
            }
            stage('Build') {
                steps {
                    script {

                            sh './gradlew clean build  //run a gradle task

                    }
                }
            }
}